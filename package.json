{
  "name": "nodejs-express-template",
  "version": "1.0.0",
  "description": "Scalable and basic template for making Node.js apps by using express",
  "main": "index.ts",
  "scripts": {
    "dev": "NODE_ENV=development nodemon index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier-eslint \"$PWD/{,!(node_modules)/**/}*.{js,json}\"",
    "format:fix": "prettier-eslint --write \"$PWD/{,!(node_modules)/**/}*.{js,json}\"",
    "prod": "NODE_ENV=production ts-node index.ts",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "migrate": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "types": "node --experimental-modules --es-module-specifier-resolution=node --loader ts-node/esm scripts/types.ts"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@metamask/eth-hd-keyring": "^4.0.2",
    "@pm2/io": "^5.0.0",
    "@types/sequelize": "^4.28.14",
    "@types/web3": "^1.2.2",
    "api": "^4.5.2",
    "bcrypt": "^5.0.0",
    "bip39": "^3.0.4",
    "body-parser": "*",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-convert": "^1.1.6",
    "dotenv": "^16.0.1",
    "eth-hd-keyring": "^3.6.0",
    "express": "^4.17.1",
    "express-ip": "^1.0.4",
    "joi": "^17.6.0",
    "moralis-v1": "^1.11.0",
    "sequelize": "^6.21.3",
    "tron-create-address": "^0.1.10",
    "tronweb": "^4.4.0",
    "uninstall": "*",
    "web3": "^1.8.0"
  },
  "devDependencies": {
    "@metamask/scure-bip39": "^2.0.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.1.2",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "ethers": "^3.0.29",
    "husky": "^4.2.5",
    "install": "^0.13.0",
    "jest": "^29.2.2",
    "joi-to-typescript": "^4.0.5",
    "lint-staged": "^10.2.9",
    "mocha": "^10.0.0",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1"
  }
}
